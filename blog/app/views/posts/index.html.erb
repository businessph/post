<% @posts.each do |post| %>     
<h2><%= post.title %></h2>        
<div><%= truncate(post.body, :length => 35) %></div>  
<div><%= truncate(post.author, :length => 35) %></div> 
<div><%= truncate(post.paragraph, :length => 35) %></div> 
<div><%= truncate(post.test, :length => 35) %></div>
<div><%= truncate(post.blood_type, :length => 35) %></div>
<div><%= truncate(post.cell_phone, :length => 35) %></div>
<br>
<%= link_to "Read Post", post %>   
<%= link_to "Edit Post", edit_post_path(post) %>
<%= link_to "Delete", post_path(post), method: :delete, data: { confirm: "Are you sure?"} %>
<% end %>